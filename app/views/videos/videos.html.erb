<!-- app/views/videos/new.html.erb -->
<%= form_with(model: @video, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :video_file, '動画ファイル' %>
  <%= form.file_field :video_file %>

  <%= form.submit %>
<% end %>

